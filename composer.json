{
	"name": "o-ba/mfa-hotp",
	"description": "TYPO3 hmac-based one-time password provider",
	"type": "typo3-cms-extension",
	"license": "GPL-3.0",
	"authors": [
		{
			"name": "Oliver Bartsch",
			"email": "bo@cedev.de"
		}
	],
	"require": {
		"php": "^7.4 || ^8.0",
		"typo3/cms-core": "^11.1",
		"bacon/bacon-qr-code": "^2.0",
		"christian-riesen/base32": "^1.6"
	},
	"require-dev": {
		"roave/security-advisories": "dev-master",
		"typo3/tailor": "^1.2",
        "typo3/coding-standards": "^0.4.0"
	},
	"extra": {
		"typo3/cms": {
			"extension-key": "mfa_hotp"
		}
	},
	"replace": {
		"typo3-ter/mfa_hotp": "self.version"
	},
    "config" : {
        "allow-plugins": {
            "typo3/class-alias-loader": true,
            "typo3/cms-composer-installers": true
        }
    },
	"autoload": {
		"psr-4": {
			"Bo\\Hotp\\": "Classes/"
		}
	},
    "scripts": {
        "cs": [
            "@php vendor/bin/php-cs-fixer fix -v --dry-run --diff --using-cache=no --config=vendor/typo3/coding-standards/templates/extension_php_cs.dist Classes/"
        ]
    }
}
